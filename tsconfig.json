{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },

  "exclude": [
    "node_modules"
  ]
}